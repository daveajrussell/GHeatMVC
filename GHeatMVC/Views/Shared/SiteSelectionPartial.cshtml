@model IEnumerable<GHeatMVC.Models.SiteSelectionViewModel>
           
<div id="div-site-selection">
    <ul id="site-selection">
    @foreach (var item in Model)
    {
        <li class="site-selection-item">
            <a class="link" href="@Url.Content(@item.URL)">@item.Display</a>
        </li>
    }
    </ul>
</div>

    