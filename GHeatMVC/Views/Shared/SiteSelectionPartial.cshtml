@model IEnumerable<GHeatMVC.Models.SiteSelectionViewModel>

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="brand" href="@Url.Content("~/Home")">David Russell - Graduate Software Developer</a>
            <div class="nav-collapse collapse">
                <ul class="nav">
                    @foreach (var item in Model)
                    {
                        <li>
                            @if (item.IsExternal)
                            {
                                <a href="@Url.Content(@item.URL)" target="_blank">@item.Display</a>
                            }
                            else
                            {
                                <a href="@Url.Content(@item.URL)">@item.Display</a>
                            }
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
